include data.pug

mixin card
  each item in card
    li.places__item(class= item.modifier)
      h3.places__country= item.country
      .places__image
        img(src= item.url alt= item.alt)

mixin radio
  each item in radio
    li.tours__button
      input.tours__input.visually-hidden(type="radio" name="country" id= item.id checked= item.checked)
      label(for= item.id).tours__label= item.name

mixin tour
  each item in tours
    li.tours__item
      .tours__item-wrapper
        h3.tours__header= item.place
        p.tours__text= item.comment
        a.tours__buy(href="#") Купить тур сейчас
      picture
        source(media="(min-width: 1024px)" srcset="img/feedback-" + item.url + "-desktop.webp" type="image/webp")
        source(media="(min-width: 768px)" srcset="img/feedback-" + item.url + "-tablet.webp" type="image/webp")
        source(media="(min-width: 320px)" srcset="img/feedback-" + item.url + ".webp" type="image/webp")
        source(media="(min-width: 1024px)" srcset="img/feedback-" + item.url + "-desktop.png")
        source(media="(min-width: 768px)" srcset="img/feedback-" + item.url + "-tablet.png")
        img.tours__img(src="img/feedback-" + item.url + ".png", alt= item.place)
      .tours__comment
        p.tours__feedback-header Отзывы
        p.tours__feedback= item.feedback
        p.tours__name= item.name
